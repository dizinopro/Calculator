<body>
  <div class="overlay"></div>

  <div class="container">
    <div id="clock" class="clock">00:00:00</div>
    <h1>PastelerÃ­a</h1>

    <div class="input-group">
      <img src="https://cdn-icons-png.flaticon.com/512/3480/3480534.png" alt="Pastel" />
      <input type="number" id="valor1" placeholder="Cantidad de Pasteles" oninput="calcular()" />
    </div>

    <div class="input-group">
      <img src="https://cdn-icons-png.flaticon.com/512/857/857681.png" alt="Flauta" />
      <input type="number" id="valor2" placeholder="Cantidad de Flautas" oninput="calcular()" />
    </div>

    <div class="resultado-box">
      <div id="resultado" class="resultado-texto">Total: $0</div>
    </div>
  </div>

  <script>
    // --- CÃ¡lculo automÃ¡tico ---
    function calcular() {
      const pasteles = parseFloat(document.getElementById("valor1").value) || 0;
      const flautas = parseFloat(document.getElementById("valor2").value) || 0;
      const total = pasteles * 1500 + flautas * 2000;

      const resultado = document.getElementById("resultado");
      resultado.textContent =
        "Total: " +
        total.toLocaleString("es-CO", {
          style: "currency",
          currency: "COP",
          minimumFractionDigits: 0,
        });
      resultado.classList.add("resaltar");
      setTimeout(() => resultado.classList.remove("resaltar"), 400);
    }

    // --- Reloj digital UTC-5 ---
    function actualizarReloj() {
      const ahora = new Date();
      const utc = ahora.getTime() + ahora.getTimezoneOffset() * 60000;
      const utc5 = new Date(utc - 5 * 3600000);

      const horas = String(utc5.getHours()).padStart(2, "0");
      const minutos = String(utc5.getMinutes()).padStart(2, "0");
      const segundos = String(utc5.getSeconds()).padStart(2, "0");

      document.getElementById("clock").textContent = `${horas}:${minutos}:${segundos}`;
    }

    setInterval(actualizarReloj, 1000);
    actualizarReloj();
  </script>
